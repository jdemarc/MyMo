<%- include('../partials/header') %>

<div class="container">
    <div class="row justify-content-center">
        <h4><%= title %></h4>
    </div>

    <% if (workouts.length) { %>
        <% workouts.forEach(function (w) { %>
            <div class="row">
                <div class="col-sm">
                    <%= w.title %>
                </div>
                <div class="col-sm">
                    <%= w.date.toLocaleString(); %>
                </div>

                <!-- Add exercises -->
                <div class="col-sm">
                    <form action="/workouts/<%= w._id %>" method="GET">
                        <button class="btn btn-dark my-2 my-sm-0" type="submit">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-plus-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM8.5 6a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V10a.5.5 0 0 0 1 0V8.5H10a.5.5 0 0 0 0-1H8.5V6z"/>
                            </svg>
                        </button>
                    </form>
                </div>

                <!-- Edit workout -->
                <div class="col-sm">
                    <form action="/workouts/<%= w._id %>/edit" method="GET">
                        <button class="btn btn-dark my-2 my-sm-0" type="submit">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-gear-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 0 0-5.86 2.929 2.929 0 0 0 0 5.858z"/>
                            </svg>
                        </button>
                    </form>
                </div>

                <!-- Delete workout -->
                <div class="col-sm">
                    <form action="/workouts/<%= w._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-dark my-2 my-sm-0" type="submit">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-x-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM6.854 6.146a.5.5 0 1 0-.708.708L7.293 8 6.146 9.146a.5.5 0 1 0 .708.708L8 8.707l1.146 1.147a.5.5 0 0 0 .708-.708L8.707 8l1.147-1.146a.5.5 0 0 0-.708-.708L8 7.293 6.854 6.146z"/>
                            </svg>
                    </form>


                </div>
            </div>
       <% }); %>
    <% } else { %>
        <h5>No workouts are here!</h5>
    <% } %>
</div>

<%- include('../partials/footer') %>