<%- include('../partials/header') %>

<ul class="list-group" id="workout-index">

    <li class="list-group-item">
        <div class="form-title"> <%= title %> </div>
    </li>

    <!-- If the user who is logged in's ID matches the workouts', display those-->
    <% if (workouts.length) { %>
        <% workouts.forEach(function (w) { %>
            <li class="list-group-item">
                <div class="row justify-content-center" id="first-col-format">

                <div class="col-sm">
                    <%= w.name %>
                </div>
                <div class="col-sm">
                    <%= w.date.toLocaleString(); %>
                </div>

                <!-- Add exercises -->
                <div class="col-sm" id="icons">

                    <form action="/workouts/<%= w._id %>" method="GET">
                        <button type="submit" class="btn btn-dark">
                            <svg width="1em" height="1em" viewBox="3 4 10 10" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                </svg>
                        </button>
                    </form>

                <!-- Edit workout properties-->
                    <form action="/workouts/<%= w._id %>/edit" method="GET">
                        <button class="btn btn-dark my-2 my-sm-0" type="submit">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-gear-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 0 0-5.86 2.929 2.929 0 0 0 0 5.858z"/>
                            </svg>
                        </button>
                    </form>

                <!-- Delete workout -->
                    <form action="/workouts/<%= w._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-dark my-2 my-sm-0" type="submit">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                              </svg>
                    </form>
                </div>
            </li>
        </div>
       <% }); %>
    <% } else { %>
        <h5>No workouts are here!</h5>
    <% } %>
</ul>

<%- include('../partials/footer') %>