<%- include('../partials/header') %>

<div class="container">
    <div class="row justify-content-center">
        <h4>Edit Workout</h4>
    </div>
    <div class="row justify-content-center">
        <h5>"<%= workout.title %>"</h5>
    </div>

    <form action="/workouts/<%= workout._id %>?_method=PUT" method="POST">
    <div class="row">
        <div class="col-sm">Title:</div>
        <div class="col-sm">
            <input type="text" name="title" value="yellow">
        </div>
    </div>

    <div class="row">
        <div class="col-sm">Date</div>
        <div class="col-sm">
            <input type="datetime-local" name="date" value="1955-02-12">
        </div>
    </div>

    <div class="row">
        <div class="col-sm">Duration</div>
        <div class="col-sm">
            <input type="text" name="duration" value="12">
        </div>
    </div>

    <div class="row">
        <div class="col-sm">Calories</div>
        <div class="col-sm">
            <input type="text" name="calories" value="141">
        </div>
    </div>

    <div class="row">
        <button type="submit" class="btn btn-dark">CONFIRM</button>
        </form>
    </div>
</div>
<%- include('../partials/footer') %>