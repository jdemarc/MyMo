<%- include('./partials/header') %>

<div class="row justify-content-center">
    PROGRESS
</div>

<% if (stats.length) { %>
<div class="row justify-content-center"> WORKOUTS
</div>

    <div class="progress">
        <div class="progress-bar" role="progressbar"
        style="width: <%= (totalWorkouts/7)*100 %>%" aria-valuenow="<%= totalWorkouts %>"
        aria-valuemin="0" aria-valuemax="7"></div>
    </div>


<div class="row justify-content-center">TIME</div>

    <div class="progress">
        <div class="progress-bar" role="progressbar"
        style="width: <%= (totalDuration/210)*100 %>%" aria-valuenow="<%= totalDuration %>"
        aria-valuemin="0" aria-valuemax="210"></div>
    </div>

<div class="row justify-content-center">CALORIES</div>
</div>

<div class="progress">
    <div class="progress-bar" role="progressbar"
    style="width: <%= (totalCalories/1400)*100 %>%" aria-valuemin="0" aria-valuenow="<%= totalCalories %>"
    aria-valuemax="1400"></div>
</div>

<% } else { %>
    <div class="row">
        <h5>No stats to render.</h5>
    </div>
<% } %>

<ul class="list-group text-center">
    <li class="list-group-item">
        <a href='/workouts/new'>Create workout</a>
    </li>
    <li class="list-group-item">
        <a href='/workouts/index'>View workouts</a>
    </li>
    <li class="list-group-item">
        <form class="form-inline justify-content-center" action="/workouts" method="GET">
            <input class="form-control mr-sm-2" type="search" name="name" placeholder="Search" aria-label="Search">
            <button class="btn btn-dark my-2 my-sm-0" type="submit">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
                    <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
                  </svg>
            </button>
        </form>
    </li>
</ul>


<%- include('./partials/footer') %>